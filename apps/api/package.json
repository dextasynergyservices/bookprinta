  "scripts": {
    "build": "nest build && node scripts/fix-esm-imports.cjs",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "predev": "node -e \"const{execSync}=require('child_process');try{const r=execSync('netstat -ano | findstr :3001 | findstr LISTENING',{encoding:'utf8'});const pids=[...new Set(r.trim().split('\\n').map(l=>l.trim().split(/\\s+/).pop()))];pids.forEach(p=>{try{execSync('taskkill /F /PID '+p)}catch{}});console.log('Killed stale process(es) on port 3001')}catch{console.log('Port 3001 is free')}\"",
    "dev": "bun run --watch src/main.ts",
    "start:dev": "bun run --watch src/main.ts",
    "start:debug": "bun run --watch src/main.ts --debug",
    "start:prod": "bun run src/main.ts",
    "test": "jest --config ./test/jest.config.ts",
    "test:watch": "jest --config ./test/jest.config.ts --watch",
    "test:cov": "jest --config ./test/jest.config.ts --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest.config.ts",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:unit": "jest --config ./test/jest.config.ts --testPathPattern='src/.*\\.spec\\.ts$'",
    "test:integration": "jest --config ./test/jest.config.ts --testPathPattern='test/integration'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@bookprinta/emails": "workspace:*",
